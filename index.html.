  <script>
    function checkScam() {
      const text = document.getElementById('inputText').value.toLowerCase();
      const scamWords = ['password', 'send money', 'urgent', 'free gift', 'click link', 'winner', 'account locked', 'verify', 'claim prize', 'login', 'bank', 'transfer', 'giveaway'];
      let foundWords = scamWords.filter(word => text.includes(word));

      const resultDiv = document.getElementById('result');
      if (foundWords.length > 0) {
        resultDiv.innerHTML = `<span style="color: #d32f2f;">â ï¸ Warning: This message might be a scam. Watch out for these suspicious words: <b>${foundWords.join(', ')}</b></span>`;
      } else if (text.trim() === '') {
        resultDiv.innerHTML = `<span style="color: #555;">Please paste a message to check.</span>`;
      } else {
        resultDiv.innerHTML = `<span style="color: #388e3c;">â This message looks safe.</span>`;
      }
    }
  </script>
